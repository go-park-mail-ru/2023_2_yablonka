        "apperrors.ErrorResponse": {
            "type": "object",
            "properties": {
                "error_response": {
                    "type": "string"
                }
            }
        },
        "doc_structs.UserBoardsResponse": {
            "type": "object",
            "properties": {
                "boards": {
                    "type": "array",
